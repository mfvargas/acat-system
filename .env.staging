# ACAT System - Staging Environment Configuration
# Generated: 2025-07-11

# Django Settings
DEBUG=False
SECRET_KEY=your-staging-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=acat_system.settings.staging
ALLOWED_HOSTS=staging.acat.local,your-staging-domain.com,localhost

# Database Configuration (PostgreSQL + PostGIS)
DB_ENGINE=django.contrib.gis.db.backends.postgis
DB_HOST=db
DB_NAME=acat_staging
DB_USER=acat_staging_user
DB_PASSWORD=staging_secure_password_change_me
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/1
CACHE_BACKEND=django_redis.cache.RedisCache

# Email Configuration (for staging notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-staging-email@domain.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Static and Media Files
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Security Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS Settings (if needed for API access)
CORS_ALLOWED_ORIGINS=https://your-frontend-staging.com,https://staging.acat.local

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Performance
DATABASE_CONN_MAX_AGE=600
